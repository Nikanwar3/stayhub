{
  "name": "stayhub",
  "version": "2.0.0",
  "description": "StayHub - Full-Stack Holiday Rentals Platform with React & Node.js",
  "private": true,
  "scripts": {
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "install:all": "cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "vacation-rentals",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "full-stack"
  ],
  "author": "Nidhi Kanwar",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}