<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-md-8 offset-md-2">
    <h3 class="mb-4">Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          id="title"
          placeholder="Enter a catchy title"
          required
        />
        <div class="invalid-feedback">Please provide a title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          rows="4"
          placeholder="Describe your property"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="image"
          required
        />
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="price" class="form-label">Price (per night)</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            id="price"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Please provide a price.</div>
        </div>

        <div class="col-md-8 mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            id="location"
            placeholder="City, State"
            required
          />
          <div class="invalid-feedback">Please provide a location.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          id="country"
          placeholder="India"
          required
        />
        <div class="invalid-feedback">Please provide a country.</div>
      </div>

      <button type="submit" class="btn btn-primary mb-3">Add Listing</button>
    </form>
  </div>
</div>
